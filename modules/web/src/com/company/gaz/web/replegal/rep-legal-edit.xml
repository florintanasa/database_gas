<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.gaz.web.replegal.RepLegalEdit"
        datasource="repLegalDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.gaz.web.replegal">
    <dsContext>
        <datasource id="repLegalDs"
                    class="com.company.gaz.entity.RepLegal"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="repLegalDs">
            <column width="250px">
                <field caption="msg://calitateRepLegal"
                       property="calitateRepLegal"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
