        caption="msg://editorCaption"
        class="com.company.gaz.web.matconducta.MatConductaEdit"
        datasource="matConductaDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.gaz.web.matconducta">
    <dsContext>
        <datasource id="matConductaDs"
                    class="com.company.gaz.entity.MatConducta"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="matConductaDs">
            <column width="250px">
                <field caption="msg://tipMatConducta"
                       property="tipMatConducta"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
